<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="com.ocean"/>

    <context:property-placeholder location="classpath:config.properties"/>

    <!-- 配置服务发现组件 -->
    <bean id="serviceDiscovery" class="com.hipac.service.rpc.ServiceDiscovery">
        <constructor-arg name="registryAddress" value="${registry.address}"/>
    </bean>

    <!-- 配置 RPC 代理 -->
    <bean id="rpcProxy" class="com.hipac.service.rpc.RpcProxy">
        <!--<constructor-arg name="serviceDiscovery" ref="serviceDiscovery"/>-->
        <constructor-arg name="serverAddress" value="${server.address}" />
    </bean>

    <bean id="helloService" class="com.hipac.service.rpc.RpcClientFactory">
        <property name="interfaceClass" value="com.hipac.service.HelloService"/>
        <property name="rpcProxy" ref="rpcProxy" />
        <property name="timeOut" value="50" />
    </bean>

</beans>